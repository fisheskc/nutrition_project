    <body>
       <h1>Register</h1>
            <form action="/customers/register" method="POST">
            <div>
                <label class="form-label" for="customer name">Enter customer:</label>
                <input class="form-control" type="text" id="customername" name="customername" placeholder="customer name">
            </div>
            <div>
                <label class="form-label" for="email">Enter email:</label>
                <input class="form-control" type="email" id="email" name="email" placeholder="email">
            </div>
            <div>
                <label class="form-label" for="password">Enter password:</label>
                <input class="form-control" type="password" id="password" name="password" placeholder="password">
            </div>
            <button>Sign up</button>
        </form>
    </body>
